/*
서머코딩/윈터코딩(~2018) - 점프와 순간이동

첫번째 시도-->
DP로 문제 해결 하려했으나, 효율성 문제에서 안됨

1) DP[1]= 1
2-1) num%2==0 인 경우 =>  DP[num] = DP[n/2] 
2-2) num%2==1 인 경우 =>  DP[num] = DP[n/2] + 1

*/

#include <vector>

using namespace std;

vector<int> DP;

int solve(int num) {
    if (num==1) return DP[num]=num;
    
    if(DP[num]==0) {
        DP[num]=solve(num/2);
        if(num%2==1) DP[num]++;
    }
    
    return DP[num];
}

int solution(int n)
{
    DP.resize(n+1,0);
    return solve(n);
}
